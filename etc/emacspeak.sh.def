#!/bin/sh
# emacspeak - execute emacs with speech enhancements
#$Id: emacspeak.sh.def,v 18.0 2003/04/29 21:20:16 raman Exp $
    if [ -f /etc/emacspeak.conf ]
    then
    . /etc/emacspeak.conf
fi

if [ -f $HOME/.emacs ]
then
	INITSTR="-l $HOME/.emacs"
fi

CL_ALL=""
for CL in $* ; do
	if [ "$CL" = "-o" ]; then
		DTK_PROGRAM=outloud
		export DTK_PROGRAM
	elif [ "$CL" = "-m" ]; then
		DTK_PROGRAM=multispeech
		DTK_TCL=/usr/local/libexec/multispeech/run
		export DTK_PROGRAM
		export DTK_TCL
	elif [ "$CL" = "-d" ]; then
		DTK_PROGRAM=dtk-soft
		export DTK_PROGRAM
	elif [ "$CL" = "-q" ]; then
		INITSTR=""
	else
		CL_ALL="$CL_ALL $CL"
	fi
done


exec emacs -q -l <emacspeak-dir>/emacspeak-setup.el $INITSTR $CL_ALL
