#!/bin/sh
# emacspeak - execute emacs with speech enhancements
#$Id: emacspeak.sh.def,v 22.0 2005/04/30 16:40:06 raman Exp $
if [ -f /etc/emacspeak.conf ]
then
    . /etc/emacspeak.conf
fi

CL_ALL=""
for CL in $* ; do
	if [ "$CL" = "-o" ]; then
		DTK_PROGRAM=stereo-outloud
		export DTK_PROGRAM
	elif [ "$CL" = "-m" ]; then
		DTK_PROGRAM=multispeech
		export DTK_PROGRAM
	elif [ "$CL" = "-d" ]; then
		DTK_PROGRAM=dtk-soft
		export DTK_PROGRAM
	else
		CL_ALL="$CL_ALL $CL"
	fi
done


exec emacs -l <emacspeak-dir>/emacspeak-setup.el $CL_ALL
